local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()

-- ğŸ’¾ LÆ°u Ä‘iá»ƒm vÃ  thá»i gian ban Ä‘áº§u
local oldPoints = player.leaderstats.Points.Value
local startTime = tick()

-- ğŸ§¨ Spawn Titan Boombox (tÃ¹y chá»‰nh náº¿u RemoteEvent khÃ¡c)
local function spawnTitan()
    print("ğŸ§¨ [DeadRedHunter Hub] Triá»‡u há»“i Titan Boombox...")
    -- VÃ­ dá»¥ remote giáº£ Ä‘á»‹nh:
    -- ReplicatedStorage.Remotes.SpawnTitanBoombox:FireServer()
